<h1><%= @challenge.title %></h1>

<table>
  <thead>
  <tr>
    <th>nsid</th>
    <th>User Name</th>
    <th>Email</th>
    <th>Entries</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @members.each do |member| %>
      <tr>
        <td><%= member.nsid %></td>
        <td><%= member.username %></td>
        <td><%= member.email %></td>
        <td><%= member.photos.where(:challenge_id => @challenge.id).count %></td>
        <td><%= link_to 'Show', challenge_member_path(@challenge, member) %></td>
        <td><%= link_to 'Edit', edit_challenge_member_path(@challenge, member) %></td>
        <td><%= link_to 'Contact', "https://www.flickr.com/mail/write/?to=#{member.nsid}" %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
