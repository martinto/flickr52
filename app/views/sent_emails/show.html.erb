<p id="notice"><%= notice %></p>
<p>
  <strong>To:</strong>
  <%= @display_name %>
</p>
<p>
  <strong>Photo:</strong>
  <%= link_to @title, @flickr_url %>
</p>

<p>
  <strong>Sent at:</strong>
  <%= @sent_email.sent_at %>
</p>

<p>
  <strong>Error type:</strong>
  <%= @sent_email.error_type %>
</p>

<p>
  <strong>Title:</strong>
  <%= @sent_email.title %>
</p>
<% if @sent_email.body %>
<p>
  <strong>Message:</strong>
  <%= @sent_email.body.html_safe %>
</p>
<% end %>

<%= link_to 'Back', sent_emails_path, :class => 'button' %>
