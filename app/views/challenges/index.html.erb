<h1>Listing challenges</h1>

<table>
  <thead>
    <tr>
      <th style="text-align: left">Year</th>
      <th style="text-align: left">Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.year.year %></td>
        <td><%= challenge.title %></td>
        <td><%= challenge.flickr_id ? challenge.flickr_id : 'null' %></td>
        <td><%= link_to 'Weeks', challenge_weeks_path(challenge) %></td>
        <td><%= link_to 'Members', challenge_members_path(challenge) %></td>
        <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
        <td><%= link_to('Update from Flickr', challenge_flickr_update_path(challenge), method: :put) %></td>
        <td><%= link_to('Check photos',  challenge_flickr_check_photos_path(challenge), method: :put) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Challenge', new_challenge_path %>
