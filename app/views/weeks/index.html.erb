<h1><%= @challenge.title %></h1>

<table>
  <thead>
    <tr>
      <th>Week</th>
      <th style="text-align: left">Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weeks.each do |week| %>
      <tr>
        <td><%= week.week_number %></td>
        <td><%= week.subject %></td>
        <td><%= link_to 'Show', challenge_week_path(@challenge, week) %></td>
        <td><%= link_to 'Edit', edit_challenge_week_path(@challenge, week) %></td>
        <td><%= link_to 'Delete', challenge_week_path(@challenge, week), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Week', new_challenge_week_path(@challenge) %>
<%= link_to 'Clear', challenge_clear_weeks_path(@challenge), method: :delete, data: {confirm: 'Are you sure?'} %>